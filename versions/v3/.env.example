# Coral Creek API Configuration
# Copy this file to .env and fill in your API keys

# Polygon.io API Key (Required for US stocks)
# Get your key at: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_api_key_here

# Tushare API Key (Optional, for China A-shares)
# Get your key at: https://tushare.pro/user/token
TUSHARE_TOKEN=your_tushare_token_here

# Telegram Bot (Optional, for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email Notifications (Optional)
# For Gmail, use App Password: https://myaccount.google.com/apppasswords
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SENDER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_RECEIVERS=your_email@gmail.com
